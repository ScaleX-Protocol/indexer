# Analytics Service Configuration
PORT=3001
HOST=localhost

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Database Configuration (Read-only access)
DATABASE_URL=postgresql://username:password@localhost:5432/ponder

# Service Configuration
SERVICE_NAME=analytics-service
LOG_LEVEL=info

# Consumer Group Configuration
CONSUMER_GROUP=analytics-consumers
CONSUMER_ID=analytics-consumer-1

# Batch Processing
ANALYTICS_BATCH_SIZE=5
ANALYTICS_POLL_INTERVAL=5000

# Cache Configuration
CACHE_TTL=300
REFRESH_INTERVAL=60

# Periodic Tasks
ENABLE_DAILY_SNAPSHOTS=true
ENABLE_HOURLY_AGGREGATION=true
ENABLE_CACHE_REFRESH=true